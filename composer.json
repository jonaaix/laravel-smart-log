   "description": "Context-aware logging wrapper for Laravel applications",
   "type": "library",
   "license": "MIT",
   "autoload": {
      "psr-4": {
         "Jonaaix\\SmartLog\\": "src/"
      }
   },
   "authors": [
      {
         "name": "Jonaaix",
         "email": "jonaaix@icloud.com"
      }
   ],
   "require": {
      "php": "^8.4|^8.5",
      "illuminate/support": "^11.0|^12.0",
      "illuminate/console": "^11.0|^12.0",
      "symfony/console": "^7.0|^8.0"
   },
   "extra": {
      "laravel": {
         "providers": [
            "Jonaaix\\SmartLog\\SmartLogServiceProvider"
         ]
      }
   },
   "require-dev": {
      "orchestra/testbench": "^10.8"
   }
