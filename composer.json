{
   "version": "1.0.2",
   "name": "aaix/laravel-smart-log",
   "description": "Context-aware logging wrapper for Laravel applications",
   "type": "library",
   "license": "MIT",
   "autoload": {
      "psr-4": {
         "Aaix\\SmartLog\\": "src/"
      }
   },
   "authors": [
      {
         "name": "Jonas Gnioui",
         "email": "jonaaix@icloud.com"
      }
   ],
   "require": {
      "php": ">=8.2",
      "illuminate/support": "^10.0|^11.0|^12.0|^13.0",
      "illuminate/console": "^10.0|^11.0|^12.0|^13.0",
      "symfony/console": "^7.0|^8.0"
   },
   "extra": {
      "laravel": {
         "providers": [
            "Aaix\\SmartLog\\SmartLogServiceProvider"
         ]
      }
   },
   "require-dev": {
      "orchestra/testbench": "^10.8"
   }
}
